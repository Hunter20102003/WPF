<Window x:Class="demoCanvas.demoDocPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demoCanvas"
        mc:Ignorable="d"
        Title="demoDocPanel" Height="450" Width="800">
    <Grid>
        <DockPanel Background="AliceBlue">
            <Button Name="btnTop" DockPanel.Dock="Top" Height="50">Top</Button>
            <Button Name="btnBottom" DockPanel.Dock="Bottom" Height="50">Bottom</Button>
            <Button Name="btnLeft" DockPanel.Dock="Left" Width="50">Left</Button>
            <Button Name="btnRight" DockPanel.Dock="Right" Width="50">Right</Button>
            <Button Name="btnCenter" ></Button>
            
            
        </DockPanel>
    </Grid>
</Window>
